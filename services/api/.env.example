# DrugInsightAI API Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
DRUGINSIGHTAI_ENVIRONMENT=development
DRUGINSIGHTAI_DEBUG=true
DRUGINSIGHTAI_HOST=0.0.0.0
DRUGINSIGHTAI_PORT=8000
DRUGINSIGHTAI_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Settings
DRUGINSIGHTAI_DATABASE_URL=postgresql://druginsightai:changeme@localhost:5432/druginsightai
DRUGINSIGHTAI_DATABASE_POOL_SIZE=10
DRUGINSIGHTAI_DATABASE_MAX_OVERFLOW=20
DRUGINSIGHTAI_DATABASE_POOL_PRE_PING=true

# Redis Settings
DRUGINSIGHTAI_REDIS_URL=redis://localhost:6379/0
DRUGINSIGHTAI_REDIS_MAX_CONNECTIONS=10

# Security Settings
DRUGINSIGHTAI_SECRET_KEY=change-this-to-a-secure-secret-key-in-production
DRUGINSIGHTAI_ALGORITHM=HS256
DRUGINSIGHTAI_ACCESS_TOKEN_EXPIRE_MINUTES=30
DRUGINSIGHTAI_REFRESH_TOKEN_EXPIRE_DAYS=7
DRUGINSIGHTAI_PASSWORD_HASH_SCHEMES=bcrypt
DRUGINSIGHTAI_PASSWORD_HASH_DEPRECATED=auto

# AWS Settings (for production authentication)
DRUGINSIGHTAI_AWS_REGION=us-east-1
DRUGINSIGHTAI_AWS_COGNITO_USER_POOL_ID=
DRUGINSIGHTAI_AWS_COGNITO_CLIENT_ID=
DRUGINSIGHTAI_AWS_COGNITO_CLIENT_SECRET=

# Authentication Settings
DRUGINSIGHTAI_ENABLE_LOCAL_AUTH=true
DRUGINSIGHTAI_ENABLE_AWS_AUTH=false

# API Rate Limiting
DRUGINSIGHTAI_RATE_LIMIT_REQUESTS=100
DRUGINSIGHTAI_RATE_LIMIT_WINDOW=60

# Pagination
DRUGINSIGHTAI_DEFAULT_PAGE_SIZE=20
DRUGINSIGHTAI_MAX_PAGE_SIZE=100

# Logging
DRUGINSIGHTAI_LOG_LEVEL=INFO
DRUGINSIGHTAI_LOG_FORMAT=json

# External API Keys (optional)
DRUGINSIGHTAI_FDA_API_KEY=
DRUGINSIGHTAI_CLINICALTRIALS_GOV_API_KEY=
